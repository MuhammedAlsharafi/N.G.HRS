@model IEnumerable<N.G.HRS.Areas.PayRoll.Models.EndOfServiceClearance>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "مخالصة نهاية الخدمة";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="space-between">
                    <h3>دليل الاضافي المعتمد تلقائيا </h3>

                    <authorize policy="AddPolicy">
                        <a asp-action="Create" class="btn btn-primary col-md-1 col-12" style="min-width: 80px; white-space: nowrap; text-align: center;">جديد</a>
                    </authorize>
                </div>
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employee)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EndOfServiceDate)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.ReasonForClearance)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LastApprovedSalary)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ServicePeriodPerYear)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EndOfServiceBenefits)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AdvancesAndLoans)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VacationEntitlements)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Absence)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OtherEntitlements)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OtherDiscounts)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Total)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Employee.EmployeeName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndOfServiceDate)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReasonForClearance)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastApprovedSalary)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ServicePeriodPerYear)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndOfServiceBenefits)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AdvancesAndLoans)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VacationEntitlements)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Absence)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OtherEntitlements)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OtherDiscounts)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Total)
                                    </td>
                                    <td>
                                        <authorize policy="EditPolicy">
                                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        </authorize> |
                                        <authorize policy="DetailsPolicy">
                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        </authorize> |
                                        <authorize policy="DeletePolicy">
                                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </authorize>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>