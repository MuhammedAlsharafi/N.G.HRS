@model IEnumerable<N.G.HRS.Areas.OrganizationalChart.Models.Company>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "دليل الشركة";
    Layout = "_Layout";

}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="space-between">
                    <h3> دليل الشركة </h3>

                    <authorize policy="AddPolicy">
                        <a asp-action="Create" class="btn btn-primary col-md-1 col-12" style="min-width: 80px; white-space: nowrap; text-align: center;">جديد</a>
                    </authorize>
                </div>
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CompanyName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LicenseNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TypeOfBusinessActivity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ComponyLogo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ComponyAddress)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Notes)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BoardOfDirectors.CouncilName)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LicenseNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TypeOfBusinessActivity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ComponyLogo)
                                    </td>

                                    <!-- Gallery start -->
                                    @* <div class="baguetteBoxThree gallery">


                                <a href="~/Upload/Images/Employee/@employee.ImageFile" class="effects">
                                <img src="~/Upload/Images/@employee.ImageFile" class="avatar img-thumbnail img-xs img-fluid" alt=".......">
                                <div class="overlay">
                                <span class="expand">+</span>
                                </div>
                                </a>

                                </div> *@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ComponyAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BoardOfDirectors.CouncilName)
                                    </td>
                                    <td>
                                        <authorize policy="EditPolicy">
                                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        </authorize> |
                                        <authorize policy="DetailsPolicy">
                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        </authorize> |
                                        <authorize policy="DeletePolicy">
                                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </authorize>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}