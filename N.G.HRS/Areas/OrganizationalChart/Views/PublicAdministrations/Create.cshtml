@model N.G.HRS.Areas.OrganizationalChart.Models.PublicAdministration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "جديد";
    Layout = "_Layout";

}
<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="../../../dashboard.html"> الرئيسة</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة النظام
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة الهيكل التنظيمي
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <a asp-action="Index"> </a>

        </li>
    </ol>
</nav>
<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3> PublicAdministration  </h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group col-md-6 ">
                                <label asp-for="PublicAdministrationName" class="control-label"></label>
                                <input asp-for="PublicAdministrationName" class="form-control" />
                                <span asp-validation-for="PublicAdministrationName" class="text-danger"></span>
                            </div>
                            <div class="form-group col=md-6">
                                <label asp-for="Nots" class="control-label"></label>
                                <input asp-for="Nots" class="form-control" />
                                <span asp-validation-for="Nots" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="حفظ" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-light" style="color;white">رجوع للقائمة </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
