@model N.G.HRS.Areas.Finance.Models.Currency
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "جديد";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}
<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="../../../dashboard.html"> الرئيسة</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة النظام
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة البيانات المالية
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <a asp-action="Index">دليل العملات </a>

        </li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="card-header">
                    <h3>دليل العملات</h3>
                </div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3 mt-3">
                        <div class="col-md-12">
                            <label asp-for="CurrencyName" class="form-label"></label>
                            <input asp-for="CurrencyName" class="form-control" />
                            <span asp-validation-for="CurrencyName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <label asp-for="CurrencyCode" class="form-label"></label>
                            <input asp-for="CurrencyCode" class="form-control" />
                            <span asp-validation-for="CurrencyCode" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="CurrentPriceOfCurrency" class="form-label"></label>
                            <input asp-for="CurrentPriceOfCurrency" class="form-control" />
                            <span asp-validation-for="CurrentPriceOfCurrency" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="PreviousPriceOfCurrency" class="form-label"></label>
                            <input asp-for="PreviousPriceOfCurrency" class="form-control" />
                            <span asp-validation-for="PreviousPriceOfCurrency" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3 mt-3">
                        <div class="col-md-12">
                            <label asp-for="CurrencyNotes" class="form-label">الملاحظات</label>
                            <input asp-for="CurrencyNotes" class="form-control" />
                            <span asp-validation-for="CurrencyNotes" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" value="حفظ" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-light">رجوع للقائمة</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
