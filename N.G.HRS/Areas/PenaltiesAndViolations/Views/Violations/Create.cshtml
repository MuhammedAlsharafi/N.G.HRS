@model N.G.HRS.Areas.PenaltiesAndViolations.Models.Violations

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "جديد";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}
<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="../../../dashboard.html"> الرئيسة</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة النظام
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            التهيئة العامة
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            المخالفات
        </li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="card-header">
                    <h3> المخالفات   </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="row ">
                            <div class="mb-3 col-md-6">
                                <label asp-for="ViolationsName" class="form-label">إسم نوع المخالفة</label>
                                <input asp-for="ViolationsName" class="form-control" id="exampleInputUsername1" />
                                <span asp-validation-for="ViolationsName" class="text-danger"></span>
                            </div>
                            <!-- Row -->
                        </div>



                        <!-- Row -->
                        <div class="mb-3 col-md-6">


                            <label asp-for="Notes" class="form-label">الملاحظات</label>
                            <input asp-for="Notes" class="form-control" id="exampleInputPassword1" />
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                            <div class="form-group col-md-6">
                                <input type="submit" id="submit" value="حفظ" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-light" style="color;white">رجوع للقائمة </a>

                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


