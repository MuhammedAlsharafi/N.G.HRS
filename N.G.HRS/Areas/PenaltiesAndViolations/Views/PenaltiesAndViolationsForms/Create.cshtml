@model N.G.HRS.Areas.PenaltiesAndViolations.Models.PenaltiesAndViolationsForms
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "جديد";
    Layout = "_Layout";

}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="../../../dashboard.html"> الرئيسة</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة النظام
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            التهيئة العامة
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            نماذج المخالفات والعقوبات
        </li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="card-header">
                    <h3> نماذج المخالفات والعقوبات   </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="row ">
                            <div class="mb-3 col-md-6">

                                <label asp-for="Name" class="form-label">اسم النموذج</label>
                                <input asp-for="Name" class="form-control" id="exampleInputUsername1" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">

                                <label asp-for="ViolationsId" class="form-label"> نوع المخالفة </label>
                                <select asp-for="ViolationsId" class="form-control" asp-items="ViewBag.ViolationsId"></select>

                            </div>
                            <div class="mb-3 col-md-6">

                                <label asp-for="PenaltiesId" class="form-label"> نوع العقوبة </label>
                                <select asp-for="PenaltiesId" class="form-control" asp-items="ViewBag.PenaltiesId"></select>

                            </div>

                            <!-- Row -->
                        </div>



                        <!-- Row -->
                        <div class="mb-3 col-md-6">

                            <label asp-for="Notes" class="form-label">الملاحظات</label>
                            <input asp-for="Notes" class="form-control" id="exampleInputPassword1" />
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <input type="submit" id="submit" value="حفظ" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-light" style="color;white">رجوع للقائمة </a>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* ========================== *@


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
