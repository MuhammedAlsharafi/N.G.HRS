@model N.G.HRS.Areas.PlanningAndJobDescription.Models.FunctionalClass
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "جديد";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}
<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="../../../dashboard.html"> الرئيسة</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة النظام
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة التخطيط والتوصيف الوظيفي
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <a asp-action="Index"> دليل الدرجة الوظيفية</a>

        </li>
    </ol>
</nav>
<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3>دليل الدرجة الوظيفية   </h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row mb-3">
                                <div class="form-group col-md-6 ">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label asp-for="BasicSalary" class="control-label"></label>
                                    <input asp-for="BasicSalary" class="form-control" />
                                    <span asp-validation-for="BasicSalary" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label asp-for="CurrencyId" class="control-label"></label>
                                    <select asp-for="CurrencyId" class="js-example-basic-single form-select" asp-items="ViewBag.CurrencyId">
                                        <option value="" selected disabled></option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-md-12 mb-3">
                                <label asp-for="Notes" class="control-label"></label>
                                <input asp-for="Notes" class="form-control" />
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="حفظ" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-light" style="color;white">رجوع للقائمة </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
