@model N.G.HRS.Areas.AalariesAndWages.Models.EmployeeAccount

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "جديد";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}
<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="../../../dashboard.html"> الرئيسة</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة النظام
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            التهيئة العامة
        </li>
        <li class="breadcrumb-item active" aria-current="page">
           تهيئة الاجور والمرتبات
        </li>
        <li class="breadcrumb-item active" aria-current="page">
          دليل حسابات الموظفين
        </li>
        
    </ol>
</nav>
<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3>دليل حسابات الموظفين   </h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Notes" class="control-label"></label>
                                <input asp-for="Notes" class="form-control" />
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EmployeeId" class="control-label"></label>
                                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="FinanceAccountTypeId" class="control-label"></label>
                                <select asp-for="FinanceAccountTypeId" class="form-control" asp-items="ViewBag.FinanceAccountTypeId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="FinanceAccountId" class="control-label"></label>
                                <select asp-for="FinanceAccountId" class="form-control" asp-items="ViewBag.FinanceAccountId"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="حفظ" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-light" style="color;white">رجوع للقائمة </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("#EmployeeAccountForm").submit(function (event) {
                // event.preventDefault();
                var employeeAccountEmployeeId = $("#EmployeeAccountEmployeeId").val();
                var employeeAccountFinanceAccountTypeId = $("#EmployeeAccountFinanceAccountTypeId").val();
                var employeeAccountFinanceAccountId = $("#EmployeeAccountFinanceAccountId").val();
                if (employeeAccountEmployeeId === "") {
                    // عرض رسالة الخطأ
                    Swal.fire({
                        icon: "error",
                        title: "الرجاء اختيار الموظف!",
                    });
                }
                else if (employeeAccountFinanceAccountTypeId === "") {
                    // عرض رسالة الخطأ
                    Swal.fire({
                        icon: "error",
                        title: "الرجاء اختيار نوع الحساب!",
                    });
                }
                else if (employeeAccountFinanceAccountId === "") {
                    // عرض رسالة الخطأ
                    Swal.fire({
                        icon: "error",
                        title: "الرجاء اختيار  الحساب!",
                    });
                }
                

                
            });
        });
    </script>

}
