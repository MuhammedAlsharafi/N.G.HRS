@section Scripts {
    <script>
        $(document).ready(function () {
            const dateInput = document.getElementById("FromDate");
            const lastDayInput = document.getElementById("ToDate");
            const daysInput = document.getElementById("NumberOfMonthsDays");
            const date = new Date(dateInput.value);

            //=====================================
            // Set the date to the last day of the month
            dateInput.addEventListener("change", function () {

                if (lastDayInput.value==null){

                    // var month = data.getMonth() + 1;
                    // console.log(month);
                    // Set the date to the last day of the month
                    date.setDate(1);
                    date.setMonth(date.getMonth() + 1);
                    date.setDate(date.getDate() - 1);

                    // Update the value of the second input with the last day of the month
                    lastDayInput.value = date.toLocaleDateString();
                }
                else{
                        const startDate = new Date(dateInput.value);
                        const endDate = new Date(lastDayInput.value);
                        const oneDay = 24 * 60 * 60 * 1000; // milliseconds in a day
                        const daysDiff = Math.round((endDate - startDate) / oneDay);

                        // Update the value of the third input with the number of days
                        daysInput.value = daysDiff;
                }


                // if (lastDayInput.value != null) {
                //     const startDate = new Date(dateInput.value);
