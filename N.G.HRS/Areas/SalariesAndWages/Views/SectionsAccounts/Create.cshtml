@model N.G.HRS.Areas.AalariesAndWages.Models.SectionsAccounts
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "جديد ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}

<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3> حسابات الاقسام  </h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Notes" class="control-label"></label>
                                <input asp-for="Notes" class="form-control" />
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FinanceAccountTypeId" class="control-label"></label>
                                <select asp-for="FinanceAccountTypeId" class="form-control" asp-items="ViewBag.FinanceAccountTypeId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="FinanceAccountId" class="control-label"></label>
                                <select asp-for="FinanceAccountId" class="form-control" asp-items="ViewBag.FinanceAccountId"></select>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="SectionsId" class="control-label"></label>
                                <select asp-for="SectionsId" class="form-control" asp-items="ViewBag.SectionsId"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="حفظ" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-light" style="color;white">رجوع للقائمة </a>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("#SectionsAccountsForm").submit(function (event) {
                var sectionsFinanceAccountTypeId = $("#SectionsFinanceAccountTypeId").val();
                var sectionsFinanceAccountId = $("#SectionsFinanceAccountId").val();
                var sectionsSectionsId = $("#SectionsSectionsId").val();


                if (sectionsFinanceAccountTypeId === ""  ) {

                    // عرض رسالة الخطأ
                    Swal.fire({
                        icon: "error",
                        title: "الرجاء اختيار نوع الحساب!",
                    });
                }
                else if (sectionsFinanceAccountId === "" ) {
                    // عرض رسالة الخطأ
                    Swal.fire({
                        icon: "error",
                        title: "الرجاء اختيار  الحساب!",
                    });
                }
                else if (sectionsSectionsId === "") {
                    // عرض رسالة الخطأ
                    Swal.fire({
                        icon: "error",
                        title: "الرجاء اختيار نوع القسم !",
                    });
                }
               
            });
        });
    </script>


}
